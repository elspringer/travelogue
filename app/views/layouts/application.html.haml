!!! 5
%html
  %head
    %title Travelogue - Women Travel Groups
    %link(href="https://fonts.googleapis.com/css?family=Hammersmith+One" rel="stylesheet")
    = javascript_include_tag 'application', "data-turbolinks-track" => true

    %link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
    %link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous")


    = stylesheet_link_tag 'application', "data-turbolinks-track" => true
    = stylesheet_link_tag 'print', media: 'print'
    %script(src="https://use.fontawesome.com/672df74d4b.js")


    = csrf_meta_tags
  %body
    .navbar.navbar-top.navbar-custom.navbar-fixed-top{role: "navigation"}
      .container-fluid


        .navbar-header
          .pull-left
            %p.title= link_to 'Travelogue', root_path



        .navbar-right
          %ul.nav.navbar-nav

            %li= link_to 'About', about_path
            %li= link_to 'Workshops & Events', workshops_path
            %li.dropdown
              %a.dropdown-toggle(data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false")
                Retreats
                %b.caret
              %ul.dropdown-menu
                %li= link_to "Surf in Basques", basques_path
                %li= link_to "Chill Hiking Retreat", berlin_path
            %li= link_to 'Blog', 'https://medium.com/travelogue-co'



= yield
